<Page
    x:Class="LivrariaVirtualApp.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LivrariaVirtualApp.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView IsSettingsVisible="False" ItemInvoked="NavigationView_ItemInvoked">
            <NavigationView.PaneFooter>
                <StackPanel>
                    <NavigationViewItem Content="Login" Icon="Permissions" 
                                        Visibility="{x:Bind UserViewModel.IsNotLogged, Mode=OneWay}"
                                        x:Name="btnLogin"
                                        Tapped="btnLogin_Tapped" />
                    <NavigationViewItem Content="Logout" Icon="NewWindow"
                                        Visibility="{x:Bind UserViewModel.IsLogged, Mode=OneWay}"
                                        x:Name="btnLogout"
                                        Tapped="btnLogout_Tapped" />
                    <NavigationViewItem Content="Register" Icon="ContactInfo" 
                                        Visibility="{x:Bind UserViewModel.IsNotLogged, Mode=OneWay}"
                                        x:Name="btnRegister"
                                        Tapped="btnRegister_Tapped" />
                </StackPanel>
            </NavigationView.PaneFooter>
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Wish List" Icon="Shop"/>
                <NavigationViewItem Content="Books" Icon="List"/>
                <NavigationViewItem Content="Categories" Icon="Library"/>
                <NavigationViewItem Content="Users" Icon="Contact"/>
                <NavigationViewItem Content="Cart"/>
            </NavigationView.MenuItems>

            <Frame x:Name="frame" Padding="10" />
        </NavigationView>
    </Grid>
</Page>
